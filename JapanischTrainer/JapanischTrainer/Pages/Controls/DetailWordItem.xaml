<UserControl x:Class="NihongoSenpai.Pages.Controls.DetailWordItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Width="480" Height="auto">

    <Grid x:Name="LayoutRoot">
        <StackPanel Margin="10,0,10,10">
            <TextBlock Name="wordTextblock" FontSize="26.667" FontFamily="TimesNewRoman" Padding="0,4,0,0" Height="auto" Width="auto" TextWrapping="Wrap" MaxWidth="480" Foreground="Black">私はとても変態だけど、それはいいよ。－ Ich bin total Pervers, aber das ist schon ok</TextBlock>
            <TextBlock Name="descriptionTextblock" FontSize="18.667" Foreground="#FF7E7E7E" Height="22.5">な-Adjektiv</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>